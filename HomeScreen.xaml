                <Grid x:Name="DueTodayGrid"  Grid.Column="3" Grid.Row="2" Grid.RowSpan="3" Grid.ColumnSpan="1" >
                    <Border BorderThickness="11" CornerRadius="35,35,35,35" >
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.35">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FFC3C3C3" Offset="1"/>
                                <GradientStop Color="#FF253A4C" Offset="0.17"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid x:Name="DueToday">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40*"/>
                                <RowDefinition Height="73*"/>
                                <RowDefinition Height="73*"/>
                                <RowDefinition Height="73*"/>
                                <RowDefinition Height="73*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="49*"/>
                                <ColumnDefinition Width="107*"/>
                            </Grid.ColumnDefinitions>


                        </Grid>
                    </Border>
                </Grid>
                <Grid  x:Name="Statistics" Grid.Column="3" Grid.RowSpan="1" Grid.ColumnSpan="1" Grid.Row="1">
                    <Border  BorderThickness="11" CornerRadius="35,35,35,35">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.35">
                                <LinearGradientBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                        <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </LinearGradientBrush.RelativeTransform>
                                <GradientStop Color="#FFC3C3C3" Offset="1"/>
                                <GradientStop Color="#FF253A4C" Offset="0.17"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Viewbox>
                            <Grid Margin="2,0,3,6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="9*"/>
                                    <RowDefinition Height="73*"/>
                                </Grid.RowDefinitions>
                                <Grid VerticalAlignment="Top" Margin="6,2,6,0" Grid.RowSpan="2">
                                    <Ellipse>
                                        <Ellipse.Fill>
                                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" Opacity="0.3">
                                                <LinearGradientBrush.RelativeTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                                                        <SkewTransform CenterX="0.5" CenterY="0.5"/>
                                                        <RotateTransform Angle="90" CenterX="0.5" CenterY="0.5"/>
                                                        <TranslateTransform/>
                                                    </TransformGroup>
                                                </LinearGradientBrush.RelativeTransform>
                                                <GradientStop Color="#FF15253F" Offset="0"/>
                                                <GradientStop Color="#FFC3C3C3" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <Ellipse Height="50" Width="50" Fill="#FFC3C3C3" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5,5,5,5"/>
                                    <TextBlock x:Name="TotalTasks" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Center" Height="16" Width="50" FontFamily="PMingLiU-ExtB" TextAlignment="Center" Foreground="#FF15253F" Text="Total"/>

                                </Grid>
                                <TextBlock x:Name="Done"  HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Bottom" FontFamily="PMingLiU-ExtB" TextAlignment="Center" Foreground="#FFC3C3C3" Text="Done" FontSize="6" Grid.Row="1"/>
                                <TextBlock x:Name="Unfinished"  HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="PMingLiU-ExtB" TextAlignment="Center" Foreground="#FFC3C3C3" Text="Unfinished" FontSize="6" Margin="0,66,0,0" Grid.Row="1"/>
                                <TextBlock x:Name="Late"  HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Bottom" FontFamily="PMingLiU-ExtB" TextAlignment="Center" Foreground="#FFC3C3C3" Text="Late" FontSize="6" Grid.Row="1"/>

                            </Grid>


                        </Viewbox>
                    </Border>
                </Grid>





            </Grid>
        </DockPanel>

        <Button x:Name="SideMenuButton" Template="{StaticResource NoMouseOverButtonTemplate}" Cursor="Hand" Height="29" Width="45" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="108,0,0,0" Click="SideMenuButton_Click" BorderBrush="{x:Null}" Foreground="{x:Null}"  >
            <Button.Background>
                <ImageBrush ImageSource="/sideMenu.png" Stretch="Uniform"/>
            </Button.Background>
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="95" Y="5"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>

        <Button x:Name="OptionsButton" Height="38" Template="{StaticResource NoMouseOverButtonTemplate}" Cursor="Hand" VerticalAlignment="Center" Grid.Row="1" Width="46" HorizontalAlignment="Left" Margin="10,0,0,0" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/settings.png" Stretch="UniformToFill"/>
            </Button.Background>
        </Button>
        <Button x:Name="ResetButton" Height="38" Template="{StaticResource NoMouseOverButtonTemplate}" Cursor="Hand" Width="46" VerticalAlignment="Center" Click="ResetButton_Click" Grid.Row="1" HorizontalAlignment="Left" Margin="188,0,0,0" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="/reset.png" Stretch="Uniform"/>
            </Button.Background>
        </Button>



    </Grid>
</Window>